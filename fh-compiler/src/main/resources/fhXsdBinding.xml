<bindings
        xmlns="http://java.sun.com/xml/ns/jaxb"
        xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        version="2.1">
    <globalBindings localScoping="toplevel">
        <xjc:javaType name="java.time.LocalDate" xmlType="xs:date"
                      adapter="pl.fhframework.compiler.core.integration.xsd.LocalDateXmlAdapter" />
        <xjc:javaType name="java.util.Date" xmlType="xs:dateTime"
                      adapter="pl.fhframework.compiler.core.integration.xsd.TimeStampXmlAdapter" />
        <xjc:simple/>
    </globalBindings>
</bindings>